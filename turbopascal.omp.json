{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "blocks": [
    {
      "alignment": "left",
      "horizontal_offset": 0,
      "vertical_offset": 0,
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "background": "#0e87ca",
          "foreground": "#FFFFFF",
          "leading_diamond": "",
          "properties": {
            "wsl": "",
            "wsl_separator": "",
            "prefix": " "
          }
        },
        {
          "type": "session",
          "style": "diamond",
          "background": "#0e87ca",
          "foreground": "#FFFFFF",
          "trailing_diamond": "\uE0B0",
          "properties": {
            "display_host": false,
            "prefix": "",
            "postfix": "\u2800"
          }
        },
        {
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "type": "path",
          "background": "#e66417",
          "foreground": "#FFFFFF",
          "properties": {
            "prefix": "  ",
            "home_icon": "~",
            "style": "folder",
            "postfix": "\u2800"
          }
        },
        {
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "type": "git",
          "background": "#87c3e1",
          "foreground": "#000000",
          "leading_diamond": "",
          "trailing_diamond": "",
          "properties": {
            "display_status": true,
            "display_stash_count": true,
            "display_upstream_icon": true,
            "fetch_upstream_icon": true,
            "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \uF692 {{ .StashCount }}{{ end }}"
          }
        },
        {
          "type": "az",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#000000",
          "background": "#d6ffff",
          "leading_diamond": "",
          "trailing_diamond": "",
          "properties": {
            "template": " Azure ",
            "prefix": " \uFD03 "
          }
        },
        {
          "type": "kubectl",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#000000",
          "background": "#d6ffff",
          "leading_diamond": "",
          "trailing_diamond": "",
          "properties": {
            "prefix": " \uFD31 ",
            "template": "{{.Context}}{{if .Namespace}}:{{.Namespace}}{{end}}"
          }
        },
        {
          "type": "azfunc",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "leading_diamond": "",
          "trailing_diamond": "",
          "background": "#d6ffff",
          "foreground": "#000000",
          "properties": {
            "prefix": " \uf0e7 ",
            "display_version": false,
            "display_mode": "files"
          }
        },
        {
          "background": "#0e87ca",
          "foreground": "#FFFFFF",
          "powerline_symbol": "\uE0B0",
          "style": "powerline",
          "type": "root"
        }
      ],
      "type": "prompt"
    }
  ]
}